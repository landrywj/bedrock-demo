{
  "openapi": "3.0.0",
  "info": {
    "title": "Hello World API",
    "version": "1.0.0",
    "description": "Simple API for greeting functionality"
  },
  "paths": {
    "/sayHello": {
      "post": {
        "summary": "Say hello",
        "description": "Returns a friendly greeting message",
        "operationId": "sayHello",
        "requestBody": {
          "required": false,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "description": "Optional name to include in the greeting"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Greeting returned successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
